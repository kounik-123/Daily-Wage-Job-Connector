<div class="d-flex justify-content-between align-items-center">
  <h3 class="mb-0">Mail</h3>
</div>
<div class="mt-3">
  <% if (ok) { %>
    <div class="alert alert-success"><i class="bi bi-check-circle me-1"></i> Test email sent.</div>
  <% } %>
  <% if (err) { %>
    <div class="alert alert-danger"><i class="bi bi-x-circle me-1"></i> Failed to send email (check SMTP settings).</div>
  <% } %>
  <form method="post" class="card shadow-sm">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">To</label>
          <input type="email" name="to" class="form-control" placeholder="recipient@example.com" />
          <div class="form-text">Defaults to your account email if left blank.</div>
        </div>
        <div class="col-md-6">
          <label class="form-label">Subject</label>
          <input type="text" name="subject" class="form-control" placeholder="Kaaj Khuji Test Email" />
        </div>
        <div class="col-12">
          <label class="form-label">Message</label>
          <textarea name="message" class="form-control" rows="4" placeholder="Hello from Kaaj Khuji."></textarea>
        </div>
      </div>
    </div>
    <div class="card-footer text-end">
      <button class="btn btn-primary" type="submit"><i class="bi bi-send me-1"></i>Send</button>
    </div>
  </form>
</div>
