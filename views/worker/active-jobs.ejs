<h3>My Active Jobs</h3>
<div class="row g-3 mt-2">
  <% if (!jobs || jobs.length === 0) { %>
    <div class="col-12"><div class="alert alert-info">No active jobs.</div></div>
  <% } %>
  <% jobs.forEach(j => { %>
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5><%= j.title %></h5>
          <p class="text-muted mb-1">Wage: â‚¹<%= j.wage %></p>
          <p class="mb-1">Posted by: <%= j.postedBy ? j.postedBy.name : '-' %></p>
          <div class="d-flex gap-2">
            <a class="btn btn-primary btn-sm" href="/jobs/<%= j._id %>"><i class="bi bi-eye me-1"></i>View Details</a>
            <form method="post" action="/jobs/<%= j._id %>/complete">
              <button class="btn btn-outline-success btn-sm" type="submit">Mark Complete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
