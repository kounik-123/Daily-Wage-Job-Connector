<h3>Available Jobs</h3>
<div class="row g-3 mt-2">
  <% if (!jobs || jobs.length === 0) { %>
    <div class="col-12"><div class="alert alert-info">No jobs available.</div></div>
  <% } %>
  <% jobs.forEach(j => { %>
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5><%= j.title %></h5>
          <p class="text-muted mb-1">Wage: â‚¹<%= j.wage %></p>
          <p class="mb-1">Location: <%= j.location %></p>
          <p class="small">Deadline: <%= j.deadline ? new Date(j.deadline).toDateString() : 'N/A' %></p>
          <div class="d-flex gap-2 align-items-center">
            <form method="post" action="/jobs/<%= j._id %>/apply">
              <button class="btn btn-sm btn-primary" type="submit">Apply Now</button>
            </form>
            <form method="post" action="/wishlist/<%= j._id %>/toggle">
              <button class="btn btn-sm <%= (wishlistIds && wishlistIds.includes(String(j._id))) ? 'btn-danger' : 'btn-outline-danger' %>" type="submit" title="Toggle wishlist">
                <i class="bi <%= (wishlistIds && wishlistIds.includes(String(j._id))) ? 'bi-heart-fill' : 'bi-heart' %>"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
