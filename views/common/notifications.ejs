<h3>Notifications</h3>
<form method="post" action="/notifications/read" class="mb-3">
  <button class="btn btn-sm btn-outline-primary" type="submit">Mark all as read</button>
</form>
<ul class="list-group">
  <% if (!items || items.length === 0) { %>
    <li class="list-group-item">No notifications.</li>
  <% } %>
  <% items.forEach(n => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center <%= n.isRead ? '' : 'list-group-item-info' %>">
      <span><strong><%= n.type %>:</strong> <%= n.message %></span>
      <small class="text-muted"><%= new Date(n.createdAt).toLocaleString() %></small>
    </li>
  <% }) %>
</ul>
