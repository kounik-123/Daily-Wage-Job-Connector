<!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1 data-aos="fade-up">Contact Us</h1>
      <p data-aos="fade-up" data-aos-delay="200">Have questions or feedback? We're here to help you connect and succeed.</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info" data-aos="fade-right">
          <h2>Get In Touch</h2>
          <p>We're always ready to assist you with any questions, concerns, or feedback you may have about Kaaj-Khuji.</p>
          
          <div class="contact-method">
            <div class="contact-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="contact-details">
              <h3>Our Office</h3>
              <p>123 Tech Park, Sector 5<br>Salt Lake, Kolkata 700091<br>West Bengal, India</p>
            </div>
          </div>
          
          <div class="contact-method">
            <div class="contact-icon">
              <i class="fas fa-phone-alt"></i>
            </div>
            <div class="contact-details">
              <h3>Phone Support</h3>
              <p>+91 1234 567 890 (General Inquiries)<br>+91 9876 543 210 (Technical Support)</p>
            </div>
          </div>
          
          <div class="contact-method">
            <div class="contact-icon">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="contact-details">
              <h3>Email Us</h3>
              <p>info@kaajkhuji.com (General Inquiries)<br>support@kaajkhuji.com (Technical Support)<br>business@kaajkhuji.com (Business Partnerships)</p>
            </div>
          </div>
                
        </div>
        
        <div class="contact-form" data-aos="fade-left">
          <h2>Send Us a Message</h2>
          <form id="contactForm">
            <div class="form-group">
              <label for="name">Your Name</label>
              <input type="text" id="name" placeholder="Enter your full name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" placeholder="Enter your email address" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" placeholder="Enter your phone number">
            </div>
            
            <div class="form-group">
              <label for="subject">Subject</label>
              <select id="subject" required>
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="support">Technical Support</option>
                <option value="feedback">Feedback</option>
                <option value="business">Business Partnership</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Your Message</label>
              <textarea id="message" rows="6" placeholder="Type your message here..." required></textarea>
            </div>
            
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
